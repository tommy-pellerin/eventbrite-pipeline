
<main role="main">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-3">Hi there !</h1>
      <p>Tu trouveras ici l'ensemble des evenements à venir</p>
      <p><a class="btn btn-secondary" href="<%= new_event_path %>" role="button">Créer ton event »</a></p>  
    </div>
  </div>

   
    <div class="container">
      <!-- Example row of columns -->       
      <div class="row">
        <% @events.each do |event| %>  
          <div class="col-md-4" >
            <div class="container" width="50px" height="50px">
              <p class="w-25 bg-info mt-2 p-2">
                <%if event.avatar.attached?%>
                  <%= image_tag event.avatar, alt: 'avatar' %>
                <%else%>
                  <p>=== Il n'y a pas encore de photo lié à cet event ===</p>
                <%end%>
              </p>
            </div>
            <h2><%= event.title %></h2>
            <p>Description : <%= event.description %></p>
            <p>Date de début : <%= event.start_date %></p>
            <p>Durée : <%= event.duration %></p>
            <p>Prix : <%= event.price %></p>
            <p>Lieu : <%= event.location %></p>
            <p><a class="btn btn-secondary" href="<%= event_path(event) %>" role="button">View details »</a></p>
          </div>  
        <% end %> 
      </div>    
      <hr> 
    </div> <!-- /container -->
  
</main>